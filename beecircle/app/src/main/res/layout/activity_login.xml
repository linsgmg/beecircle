<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="18dp"
    tools:context=".activity.login.LoginActivity">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:textColor="#ff111111"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:layout_marginTop="20dp"
        android:textColor="#ff000000"
        android:textSize="14sp"
        />


    <EditText
        android:id="@+id/et_input_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:digits="1234567890"
        android:gravity="center_vertical"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="#FF101010"
        android:textColorHint="#9B9B9B"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tv_pwd_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:layout_marginTop="15dp"
        android:textColor="#ff000000"
        android:textSize="14sp"
        />

    <LinearLayout
        android:id="@+id/ll_pwd_1"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/et_input_pwd_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="#FF101010"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_see_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/dp_10"
            android:src="@drawable/selector_see" />
    </LinearLayout>

    <View
        android:id="@+id/v_pwd_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingTop="10dp"
        android:text="忘记密码？"
        android:textColor="@color/deep_yellow"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_invite_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请码"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:textColor="#ff000000"
        android:textSize="14sp"
        />


    <EditText
        android:id="@+id/et_input_invite_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:background="@null"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:gravity="center_vertical"
        android:hint="请输入邀请码（必填）"
        android:inputType="textVisiblePassword"
        android:maxLength="10"
        android:textColor="#FF101010"
        android:textColorHint="#9B9B9B"
        android:textSize="14sp" />

    <View
        android:id="@+id/v_invite_code_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/line" />


    <TextView
        android:id="@+id/tv_verify_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:textColor="#ff000000"
        android:textSize="14sp"
        />

    <LinearLayout
        android:id="@+id/ll_verify_code"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_input_verify_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890"
            android:gravity="bottom"
            android:inputType="number"
            android:maxLength="6"
            android:hint="请输入验证码"
            android:textColor="#FF101010"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_get_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="6dp"
            android:gravity="center"
            android:textColor="#ff4d2400"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_yellow_40"
            android:textSize="14sp"
            />
    </LinearLayout>

    <View
        android:id="@+id/v_verify_code_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tv_pwd_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:layout_marginTop="15dp"
        android:textColor="#ff000000"
        android:visibility="gone"
        android:textSize="14sp"
        />

    <LinearLayout
        android:id="@+id/ll_pwd_2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/et_input_pwd_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="#FF101010"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_see_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/dp_10"
            android:src="@drawable/selector_see" />
    </LinearLayout>

    <View
        android:id="@+id/v_pwd_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/line" />


    <TextView
        android:id="@+id/tv_pwd_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:layout_marginTop="15dp"
        android:textColor="#ff000000"
        android:visibility="gone"
        android:textSize="14sp"
        />

    <LinearLayout
        android:id="@+id/ll_pwd_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_input_pwd_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:gravity="center_vertical"
            android:hint="请确认您的新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="#FF101010"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_see_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/dp_10"
            android:src="@drawable/selector_see" />
    </LinearLayout>

    <View
        android:id="@+id/v_pwd_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/line" />


    <LinearLayout
        android:id="@+id/ll_check"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:src="@drawable/selector_choose" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并接受"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_secret_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textColor="@color/orange"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_service_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《服务条款》"
            android:textColor="@color/orange"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="登录"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ff4d2400"
        android:background="@drawable/bg_light_yellow_40"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_login_or_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="还没有账号，去注册"
        android:layout_marginBottom="15dp"
        android:textColor="@color/deep_yellow"
        android:textSize="14sp"
        />

</LinearLayout>