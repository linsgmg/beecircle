<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_bg_top_15"
    android:orientation="vertical"
    android:paddingHorizontal="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="确认购买"
        android:textColor="#ff4d2400"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_buy_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="选择收款方式："
        android:textColor="#2A2A2A"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/ll_bee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/iv_bee"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/selector_choose" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:text="蜂蜜"
                android:textColor="#2A2A2A"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="可用：0"
                android:textColor="#2A2A2A"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/iv_share"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/selector_choose" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="分享值"
                android:textColor="#2A2A2A"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_value2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="可用：0"
                android:textColor="#2A2A2A"
                android:textSize="12sp"/>
        </LinearLayout>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/ll_zfb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/iv_zfb"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/selector_choose" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/dp5"
                android:src="@drawable/zhifubbao_shou" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_10"
                android:text="支付宝"
                android:textColor="#2A2A2A"
                android:textSize="12sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/iv_wx"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/selector_choose" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/dp5"
                android:src="@drawable/weixin_shou" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_10"
                android:text="微信"
                android:textColor="#2A2A2A"
                android:textSize="12sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yhk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/iv_yhk"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/selector_choose" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/dp5"
                android:src="@drawable/yinhangka_shou" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_10"
                android:text="银行卡"
                android:textColor="#2A2A2A"
                android:textSize="12sp"></TextView>
        </LinearLayout>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="交易密码："
        android:textColor="#2A2A2A"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_input_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:digits="1234567890"
        android:gravity="center_vertical"
        android:hint="请输入交易密码"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:maxLines="1"
        android:textColor="#FF101010"
        android:textColorHint="#9B9B9B"
        android:textSize="14sp" />

    <View
        android:id="@+id/v_pwd_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tv_verify_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="验证码"
        android:textColor="#2A2A2A"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_verify_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_input_verify_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890"
            android:gravity="bottom"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="#FF101010"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_get_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_yellow_40"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="6dp"
            android:text="获取验证码"
            android:textColor="#ff4d2400"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/v_pwd_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示：验证码有效时长30分钟"
        android:textColor="#ff3e85ff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_yellow_40"
        android:gravity="center"
        android:text="确认"
        android:textColor="#ff4d2400"
        android:textSize="14sp" />

</LinearLayout>