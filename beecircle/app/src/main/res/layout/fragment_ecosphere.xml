<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.home.UpdateActivity">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/shengtaiquanbg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="生态圈"
            android:textColor="#ff4d2400"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_charge"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/chonghuafei"
                android:drawableLeft="@drawable/huafeizhangdan"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_10"
                android:text="充话费"
                android:textColor="#ff211000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_member"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/shipinhuiyuan"
                android:drawableLeft="@drawable/huiyuanshipin"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_10"
                android:text="视频会员"
                android:textColor="#ff211000"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="其他应用"
                    android:textColor="#ff211000"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:text="蜜蜂矿场"
                    android:textColor="#ff211000"
                    android:textSize="14sp"
                    />

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/iv_mine"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/chonghuafei"
                    app:qmui_corner_radius="@dimen/dp_10"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:text="蜜蜂转转"
                    android:textColor="#ff211000"
                    android:textSize="14sp"
                    />

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/iv_turn"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/chonghuafei"
                    app:qmui_corner_radius="@dimen/dp_10"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:text="蜜蜂旅行"
                    android:textColor="#ff211000"
                    android:textSize="14sp"
                    />

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/iv_trip"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/chonghuafei"
                    app:qmui_corner_radius="@dimen/dp_10"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:text="帮帮赚"
                    android:textColor="#ff211000"
                    android:textSize="14sp"
                    />

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/iv_make_money"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/chonghuafei"
                    app:qmui_corner_radius="@dimen/dp_10"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>