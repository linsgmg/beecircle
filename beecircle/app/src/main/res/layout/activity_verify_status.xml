<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="80dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.mine.VerifyStatusActivity">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/diercishenheshibai" />

    <TextView
        android:id="@+id/tv_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="第二次审核失败"
        android:textColor="#ff4d2400"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="信息错误，请通过人工审核通道认证"
        android:visibility="gone"
        android:textColor="#ff4d2400"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/bg_yellow_40"
        android:gravity="center"
        android:text="去手持认证"
        android:visibility="gone"
        android:textColor="#ff4d2400"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>